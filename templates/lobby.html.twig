<script>
  const ws = new WebSocket('ws://localhost:8080');
  let isConnected = false;
  const messageQueue = [];

  ws.onopen = function() {
      isConnected = true;
      console.log('WebSocket connection established');
      while (messageQueue.length > 0) {
          ws.send(messageQueue.shift());
